<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="@string/name_preference_key"
        android:title="@string/title_name_preference"/>

    <PreferenceCategory
        android:title="@string/title_ringtone_section">

        <RingtonePreference
            android:showDefault="true"
            android:showSilent="true"
            android:title="@string/title_ringtone_setting"
            android:ringtoneType="ringtone|notification|alarm|all"
            android:key="@string/ringtone_preference_key"
            android:persistent="false"/>

    </PreferenceCategory>

        <com.ferro.app.profiles.settings.VolumePreference
            android:key="@string/volume_preference_key"
            android:layout="@layout/preference_volume"/>


    <PreferenceCategory
        android:title="@string/title_wireless_section">

        <SwitchPreference
            android:key="@string/wifi_preference_key"
            android:title="@string/title_wifi_preference"
            android:icon="@drawable/ic_wifi_pref"/>

        <SwitchPreference
            android:key="@string/bluetooth_preference_key"
            android:title="@string/title_bluetooth_preference"
            android:icon="@drawable/ic_bluetooth"/>

       </PreferenceCategory>

</PreferenceScreen>