<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mapActivityFLContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <tools:fragment xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ferro.app.profiles.MapsActivity" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mapActivityFABNewLocationButton"
        android:layout_width="@dimen/floating_button_dimen"
        android:layout_height="@dimen/floating_button_dimen"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/floating_button_margin_bottom"
        android:layout_marginEnd="@dimen/floating_button_margin_end" />

</FrameLayout>